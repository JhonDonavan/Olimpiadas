<p id="atleta"><%= atleta %></p>

<%= link_to "New User", new_home_path %>

<%if @atleta.present? %>
  <p>List Users</p>
  <table width="100%">
    <tr>
      <td>ID</td>
      <td>Name</td>
      <td>Action</td>
    </tr>
    
    <% @users.each do |u|%>
    <tr>
      <td><%=u[:id]%></td>
      <td><%=u[:firstName]%></td>    
      <td>
        <%= link_to "Edit", edit_home_path(u[:id]) %> |
        <%= link_to "Delete", home_path(u[:id]),
                     method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
   <%end%>
  </table>
<%else%>
  <p>No atleta is Found</p>
<%end%>